First method recursive


class Solution {
    public int search(int[] nums, int target) {
        int start =0;
        int end = nums.length-1;
        return searchR(nums, target, start, end);
    }
    
    private static int searchR(int[] nums, int target, int start, int end){
        int middle = (start + end)/2;
        if(start == middle && start!=end){
            if(nums[middle]==target){
                return middle;
            }
            else if(nums[middle+1]==target){
                return middle+1;
            }
            else{
                return -1;
            }
        }
        
        else if (start == middle){
            if(nums[middle] == target){
                return middle;
            }
            else{
                return -1;
            }
        }
        
        
        else{
            if(target==nums[middle]){
                return middle;
            }
            else if(target<nums[middle]){
                return searchR(nums, target, start, middle);
            }
            else{
                return searchR(nums, target, middle+1, nums.length-1);
            }
            
        }
    }
        
}


